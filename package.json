{
  "name": "scene-graph",
  "version": "1.0.0",
  "description": "A very simple scene graph library",
  "main": "index.js",
  "scripts": {
    "start": "electron",
    "server": "http-server ./ -a localhost -p 8001 -c-1",
    "build": "rollup --config ./script/rollup.config.js",
    "min": "uglifyjs ./dist/sg.dev.js --mangle --source-map ./dist/sg.min.js.map -o ./dist/sg.min.js",
    "release": "npm run build && npm run min",
    "test": "npm run build && tap test/*.spec.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gamedev-js/scene-graph.git"
  },
  "keywords": [
    "scene"
  ],
  "author": "jwu",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gamedev-js/scene-graph/issues"
  },
  "homepage": "https://github.com/gamedev-js/scene-graph/issues",
  "dependencies": {
    "vmath": "^1.0.1"
  },
  "devDependencies": {
    "electron": "^1.6.3",
    "fs-jetpack": "^0.13.2",
    "http-server": "^0.9.0",
    "rollup": "^0.41.4",
    "tap": "^10.3.0",
    "uglify-js": "git+https://github.com/mishoo/UglifyJS2.git#harmony"
  }
}
